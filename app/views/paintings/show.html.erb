<div class="container ml-100">
  <div class="row">
    <div class="col-8">
      <div class="card-body">
        <div class="card-show">
          <img src="<%= @painting.image %>" class="card-img-top" alt="@painting.title">
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="my-4 flex-start">
        <h2 class="card-title">
          <%= @painting.title %>
        </h2>
        <p><%= @painting.category %></p>
        <h4><%= @painting.price %> NOK</h4>
        <br>
        <p class="card-text ">
          <%= @painting.description %>
        </p>
      </div>
      <div>
        <!-- Please replace the painting path with booking path when the booking feature is done -->
        <!-- <%#= simple_form_for([@painting, @booking], :url => url_for(:action => 'create', :controller => 'bookings', :method => 'post')) do |f| %> -->
        <%= simple_form_for([@painting, @booking]) do |f| %>
        <div class="dates">
          <div class="form-inputs">
            <div class="form-row">
              <%= f.input :start_date, as: :string, input_html: { class: "datepicker" }, label: "Dates from", placeholder: "yy/mm/dd", wrapper_html: { class: "inline_field_wrapper" } %>
              <%= f.input :end_date, as: :string, input_html: { class: "datepicker" }, label: 'to', placeholder: "yy/mm/dd", wrapper_html: { class: "inline_field_wrapper" } %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <%= f.submit "book", class: "btn btn-secondary btn-lg btn-block btn-booking" %>
        </div>
        <% end %>
        <!-- replace the path with dashboard path -->
        <!-- <%#= link_to "Booking", painting_bookings_path %> -->
      </div>

    </div>
  </div>
</div>

