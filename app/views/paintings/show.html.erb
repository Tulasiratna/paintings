<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card" style="width: 32rem;">
        <img src="<%= @painting.image %>" class="card-img-top" alt="@painting.title">
        <div class="card-body">
          <h5 class="card-title">
            <%= @painting.title %>
          </h5>
          <p class="card-text">
            <%= @painting.description %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-2 col-lg-4">
      <div class="my-4 flex-start">
        <h4><%= @painting.category %></h4>
        <h4><%= @painting.price %> NOK</h4>
      </div>
      <div>
        <!-- Please replace the painting path with booking path when the booking feature is done -->
        <!-- <%#= simple_form_for([@painting, @booking], :url => url_for(:action => 'create', :controller => 'bookings', :method => 'post')) do |f| %> -->
        <%= simple_form_for([@painting, @booking], :url => url_for(:action => 'dashboard', :controller => 'paintings', :method => 'post')) do |f| %>
        <div class="dates">
          <div class="form-inputs">
            <div class="form-row">
              <%= f.input :start_date, as: :string, label: "Dates from", placeholder: "yy/mm/dd", wrapper_html: { class: "inline_field_wrapper" } %>
              <%= f.input :end_date, as: :string, label: 'to', placeholder: "yy/mm/dd", wrapper_html: { class: "inline_field_wrapper" } %>
            </div>
          </div>
        </div>
        <div class="form-row">
          <%= f.submit "book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

